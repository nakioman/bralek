@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8" />
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/png" href="@Url.Image("logo.png")" />
    <title>@Labels.WEBSITE_NAME</title>
    @Styles.Render("~/Content/landing")
    <script type="text/javascript" src="~/Scripts/Shared/analytics.js"></script>
</head>
<body>
    <section id="navbar">
        <div class="navbar">
            <div class="navbar-inner">
                <div class="container-fluid">
                    <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse"><span class="icon-bar"></span><span class="icon-bar"></span><span class="icon-bar"></span>

                    </a>
                    <a class="brand" href="@Url.HomeIndex()"></a>
                    <nav class="pull-right nav-collapse collapse">
                        <ul class="nav">
                            <li><a href="@Url.AccountRegister()">@Labels.REGISTER</a></li>
                            <li><a href="@Url.AccountLogin()">@Labels.LOGIN</a></li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </section>
    <section class="container-fluid">
        <div class="row-fluid">
            <header class="highlight span12">
                <h2>@Messages.LANDING_PRODUCT_INFO</h2>
                <img class="img-rounded" id="feature-screenshot" src="@Url.Image("shot.jpg")" alt="screenshot" />
            </header>
        </div>
    </section>
    <footer class="navbar navbar-fixed-bottom">
        <div class="container-fluid pull-right">
            <a href="http://www.treenks.com" target="_blank">Treenks</a> &copy; @DateTime.UtcNow.Year
            <a href="mailto:contact@bralek.com"><i class="icon-envelope"></i></a>
        </div>
    </footer>
    @Scripts.Render("~/bundles/jquery")
</body>
</html>
